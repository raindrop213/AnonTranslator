{
  "manifest_version": 3,
  "name": "AnonTranslator",
  "version": "1.1.0",
  "author": "raindrop213",
  "description": "Japanese light novel reading tool",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["src/content.js"],
      "css": ["css/styles.css"]
    }
  ],
  "permissions": ["storage"],
  "host_permissions": [
    "http://127.0.0.1:8666/*",
    "https://www2.deepl.com/*",
    "https://translate.google.com/m*",
    "https://aidemo.youdao.com/trans*",
    "https://api.interpreter.caiyunai.com/v1/*"
  ],
  "action": {"default_popup": "popup.html"},
  "background": {"service_worker": "src/background.js"}
}
