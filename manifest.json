{
    "manifest_version": 3,
    "name": "SelectedCopy",
    "version": "0.1.0",
    "description": "Selected Text",
    "permissions": ["activeTab", "scripting"],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts":[{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "all_frames": true
    }],
    "background": {
        "service_worker": "background.js"
    }
}