{
  "manifest_version": 3,
  "name": "AnonTranslator",
  "version": "0.4.1",
  "author": "raindrop213",
  "description": "Japanese light novel reading tool",
  "permissions": ["scripting", "clipboardWrite", "tts", "storage"],
  "host_permissions": ["https://www2.deepl.com/*"],

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:8083/*",
        "https://kakuyomu.jp/*",
        "https://syosetu.com/*",
        "https://ebook.raindrop213.info/*"
      ],
      "js": ["src/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}
